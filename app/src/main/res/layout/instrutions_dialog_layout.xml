<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#80163E"
            android:paddingBottom="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Instructions"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:text="'Give at least 6 correct answers out of 10 questions  by 4 minutes and win the \n
'FIFA WORLD CUP TROPHY'"
                android:textColor="@color/white"
                android:id="@+id/instrationIconTv"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/startt"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/continueBtn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="Continue"
                android:background="@drawable/instraction_button"
                android:layout_gravity="center"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>